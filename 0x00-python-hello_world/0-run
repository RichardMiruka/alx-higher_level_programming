#!/bin/bash
# This script runs the specified Python file from the PYFILE environment variable

if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

if [ ! -f "$PYFILE" ]; then
    echo "Error: File not found: $PYFILE"
    exit 1
fi

if [ ! -x "$PYFILE" ]; then
    echo "Error: File is not executable: $PYFILE"
    exit 1
fi

python3 "$PYFILE"



# QUESTION

# Write a Shell script that runs a Python script.

# The Python file name will be saved in the environment variable $PYFILE

# chmod +x 0-run; to make file executable